<Page x:Class="BikeShop.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{StaticResource greenBackground}"
      Title="Menu">
    <Page.Resources>
        <ResourceDictionary Source="Buttons.xaml"/>
    </Page.Resources>
    <Grid>
        <Button Content="Products" Height="80" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,100,0,0" Click="Button_Click_2"/>
        <Button Content="Live support" Height="80" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" Click="Button_Click_1"/>
        <Button Content="Email support" Height="80" Width="120" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="100,100,100,0" Click="Button_Click"/>

        <TextBlock Text="Adventure Works" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,100" FontSize="50" FontStyle="Italic" FontWeight="Bold"/>
    </Grid>
</Page>
